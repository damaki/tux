with "config/xof_config.gpr";
with "../../../../tux.gpr";
project XOF is

   for Source_Dirs use ("src", "config/");
   for Object_Dir use "obj/" & XOF_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("xof.adb");

   package Compiler is
      for Default_Switches ("Ada") use XOF_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end XOF;
